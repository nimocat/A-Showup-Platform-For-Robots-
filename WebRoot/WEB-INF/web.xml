<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">

  <welcome-file-list>
    <welcome-file>show</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>showServlet</servlet-name>
    <servlet-class>myRobot.servlet.ShowServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>myRobot.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddCartServlet</servlet-name>
    <servlet-class>myRobot.servlet.AddCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddCartServlet</servlet-name>
    <url-pattern>/servlet/AddCartServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RemoveCartServlet</servlet-name>
    <servlet-class>myRobot.servlet.RemoveCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RemoveCartServlet</servlet-name>
    <url-pattern>/servlet/RemoveCartServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ChooseCartServlet</servlet-name>
    <servlet-class>myRobot.servlet.ChooseCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ChooseCartServlet</servlet-name>
    <url-pattern>/servlet/ChooseCartServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddOrderServlet</servlet-name>
    <servlet-class>myRobot.servlet.AddOrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddOrderServlet</servlet-name>
    <url-pattern>/servlet/AddOrderServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ModifyPasswordServlet</servlet-name>
    <servlet-class>myRobot.servlet.ModifyPasswordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ModifyPasswordServlet</servlet-name>
    <url-pattern>/servlet/ModifyPasswordServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>IdentifyEmailServlet</servlet-name>
    <servlet-class>myRobot.servlet.IdentifyEmailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IdentifyEmailServlet</servlet-name>
    <url-pattern>/servlet/IdentifyEmailServlet</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
  
  	<!-- 放掉所有静态请求，拦截器只拦截jsp -->
  <servlet-mapping>  
    <servlet-name>default</servlet-name> 
    <url-pattern>*.jpg</url-pattern>
    <url-pattern>*.png</url-pattern>
    <url-pattern>*.js</url-pattern>
    <url-pattern>*.css</url-pattern>
    <url-pattern>*.eot</url-pattern>
    <url-pattern>*.svg</url-pattern>
    <url-pattern>*.ttf</url-pattern>
    <url-pattern>*.woff</url-pattern>
    <url-pattern>*.woff2</url-pattern>
    <url-pattern>*.otf</url-pattern>
    <url-pattern>*.less</url-pattern>
    <url-pattern>*.scss</url-pattern>
    <url-pattern>*.html</url-pattern>
    <url-pattern>*.mp4</url-pattern>
</servlet-mapping>
  
   <servlet>
        <servlet-name>springmvc</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
             <param-value>classpath:springmvc-servlet.xml</param-value>
        </init-param>
         <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>springmvc</servlet-name>
        <url-pattern>/</url-pattern>
     </servlet-mapping>
  
</web-app>